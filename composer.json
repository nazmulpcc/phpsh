{
    "name": "nazmulpcc/phpsh",
    "description": "Generate shell scripts from PHP with ease",
    "keywords": [
        "php",
        "shell",
        "shell-script",
        "bash",
        "bash-script"
    ],
    "homepage": "https://github.com/nazmulpcc/phpsh",
    "license": "MIT",
    "authors": [
        {
            "name": "Nazmul Alam",
            "email": "nazmulpcc@gmail.com",
            "homepage": "https://github.com/nazmulpcc/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^6.0",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PhpSh\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSh\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
